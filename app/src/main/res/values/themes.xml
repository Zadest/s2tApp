<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools"><!-- Base application theme. -->
    <style name="Theme.S2T_Empty" parent="@style/Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/periwinkle_crayola</item>
        <item name="colorOnPrimary">@color/raisin_black</item>
        <!--<item name="colorPrimaryDark">@color/jet</item>-->
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/periwinkle_crayola</item>

        <item name="actionBarPopupTheme">@style/Theme.AppCompat.DayNight</item>
        <item name="actionBarTheme">@style/Theme.AppCompat.DayNight</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="BottomNavigationView" parent="Theme.S2T_Empty">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/jet</item>
        <item name="colorSecondary">@color/periwinkle_crayola</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/periwinkle_crayola</item>
    </style>
    <style name="ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressBackgroundTint">?attr/colorPrimary</item>
        <item name="android:progressTint">?attr/colorSecondary</item>
    </style>
</resources>